FROM node:24-alpine AS builder
WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . .
RUN npm run build

FROM node:24-alpine
WORKDIR /app
COPY package*.json ./
RUN npm install --only=production
RUN apk add --no-cache wget
COPY --from=builder /app/dist ./dist
EXPOSE 3000
CMD ["node", "dist/main"]
