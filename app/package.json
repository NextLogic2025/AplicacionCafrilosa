{
  "name": "aplicacion-cafrilosa",
  "private": true,
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "npm --workspace apps/web run dev",
    "build:web": "npm --workspace apps/web run build",
    "dev:mobile": "npm --workspace apps/mobile run start",
    "dev:mobile:clear": "npm --workspace apps/mobile run start:clear",
    "android:mobile": "npm --workspace apps/mobile run android",
    "ios:mobile": "npm --workspace apps/mobile run ios",
    "dev:ventas": "npm --workspace services/ventas-service run dev",
    "build:ventas": "npm --workspace services/ventas-service run build"
  },
  "devDependencies": {
    "semver": "^7.7.3",
    "turbo": "^2.5.6"
  }
}
